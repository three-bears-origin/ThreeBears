<h1> Your Timeline </h1>

<div class="timeline-container"> 
  <ul class="timeline">
    <% @events.each do |event| %>
      <div class = "clear"></div>
      <li class="timeline-event">
        <div class="event-date"><%= event.date %></div>
        <div class="event-box">
          <div class="event-title"><%= event.title %></div>
          <img class="icon image" src="../assets/image-icon.svg">
          <img class="icon text" src="../assets/text-icon.svg">
          <img class="icon audio" src="../assets/audio-icon.svg">
          <img class="icon new-contribution" src="../assets/new-contribution-icon.svg">
        </div>
      </li>
    <% end %>
  </ul>
</div>

<a class="new-event" href="<%=new_event_path%>">Create a new event</a>